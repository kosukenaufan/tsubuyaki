#settings-edit
  .col-sm-5.settings-content
    - @user.errors.each do |attr, message|
      .alert.alert-danger= message
    = form_for @user, url: settings_path, method: :put do |f|
      %h2
        設定
      .form-body
        .form-group
          = f.label :name, "ユーザーID", class: "control-label"
          = f.text_field :name, class: "form-control"
        .form-group
          = f.label :screen_name, "表示名", class: "control-label"
          = f.text_field :screen_name, class: "form-control"
        .form-group
          .control-label 評価:<a href="">こちらのルールをご参照下さい</a>
          .control-label
            = f.label :evaluation, "はい"
            = f.radio_button :evaluation, true, :value => true
            = f.label :evaluation, "いいえ"
            = f.radio_button :evaluation, false, :checked => true, :value => false
        .form-group
          = f.label :bio, "プロフィール(200文字以内)", class: "control-label"
          = f.text_area :bio, class: "form-control"
        = f.submit "送信する", class: "btn btn-success"
