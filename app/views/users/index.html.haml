.col-xs-8#users-content
  .list-group
    .list-group-item.user-list.text-center
      %h2 ユーザー一覧
  %br
    = div_for @users, class: "list-item col-sm-3 text-center" do |u|
      .users
        = link_to render_user_screen_name(u), user_path(u)
        %h4.user
          %span.user-name
          .bio
            = u.bio
