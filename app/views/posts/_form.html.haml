= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :genre
    = collection_select(:genre, :genre, Genre.all, :genre, :genre, promp: true)
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :location
    = f.text_field :location
  .field
    = f.label :content
    = f.text_area :content

  .field
    = f.label :image
    = f.file_field :image

  .actions
    = f.submit 'Save'
