= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :商品名
    = f.text_field :title
  .field
    = f.label :アプリ名
    = collection_select(:genre, :genre, Genre.all, :genre, :genre, promp: true)
  .field
    = f.label :商品のジャンル
    = collection_select(:genre, :genre, Genre.all, :genre, :genre, promp: true)
  .field
    = f.label :値段
    = f.text_field :price
  .field
    = f.label :発送元地域
    = f.text_field :location
  .field
    = f.label :商品詳細
    = f.text_area :content

  .field
    = f.label :商品の画像
    = f.file_field :image

  .actions
    = f.submit '商品を登録'
